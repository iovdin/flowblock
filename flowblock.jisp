     (: display "flex" "flex-direction" "row"))
 )

(def domVisit startElement callback
     (do
       (= h (callback startElement))
       (= t (for element startElement.children
                 (domVisit element callback)))
       (if (and (? h) (? t.length)) 
         (if (is t.length 0)
           h (list h ...t)))))


(mac flex-property name choices ...body
     `(css-property ,name (deprefix (getStyle target ,name))
                    (on-choose valueElement ,choices

                               (css target (: ,name choice))
                               ,...body
                               (doc.dispatchEvent 
                                 (new doc.defaultView.CustomEvent "propertyChange" 
                                      (: "detail" (: "property" ,name "value" choice))))
                               )))


